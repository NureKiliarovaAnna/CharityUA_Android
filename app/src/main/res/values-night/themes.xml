<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Темна тема CharityUA -->
    <style name="Base.Theme.CharityUA_Android" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основні кольори -->
        <item name="colorPrimary">#FFA500</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorAccent">#002D85</item>

        <item name="colorSecondary">#FFA500</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Темний фон -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#000000</item>

        <!-- Текст -->
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:editTextColor">#000000</item>

        <!-- Текст чекбоксів/радіо -->
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#000000</item>

        <!-- Підкреслення в полі введення -->
        <item name="colorControlActivated">#002D85</item>
        <item name="colorControlNormal">#555555</item>

        <!-- Кнопки -->
        <item name="buttonStyle">@style/CustomButtonDark</item>
    </style>

    <style name="CustomButtonDark" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#FFA500</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>