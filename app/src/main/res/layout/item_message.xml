<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/light_gray">

    <!-- Контейнер для повідомлення організатора -->
    <LinearLayout
        android:id="@+id/organizerMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:minHeight="48dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_white_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <!-- Ім'я -->
        <TextView
            android:id="@+id/organizerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/checkbox_blue"
            android:textSize="14sp" />

        <!-- Текст повідомлення -->
        <TextView
            android:id="@+id/organizerMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <!-- Час -->
        <TextView
            android:id="@+id/organizerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:paddingTop="4dp" />

    </LinearLayout>

    <!-- Spacer для вирівнювання -->
    <Space
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <!-- Контейнер для повідомлення донатора -->
    <LinearLayout
        android:id="@+id/donorMessageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:minHeight="48dp"
        android:layout_marginStart="48dp"
        android:background="@drawable/rounded_white_background"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <!-- Ім'я -->
        <TextView
            android:id="@+id/donorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/checkbox_blue"
            android:textSize="14sp" />

        <!-- Текст повідомлення -->
        <TextView
            android:id="@+id/donorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingTop="4dp" />

        <!-- Час -->
        <TextView
            android:id="@+id/donorTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_gravity="end"
            android:paddingTop="4dp" />

    </LinearLayout>
</LinearLayout>