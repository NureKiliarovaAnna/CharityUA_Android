<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_white_background"
    android:layout_marginBottom="8dp">

    <!-- Назва збору -->
    <TextView
        android:id="@+id/chatFundraiserTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назва збору"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <!-- Останнє повідомлення -->
    <TextView
        android:id="@+id/chatLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Останнє повідомлення..."
        android:textSize="14sp"
        android:textColor="#4D4D4D"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp" />

    <!-- Кількість нових повідомлень -->
    <TextView
        android:id="@+id/chatUnreadCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_red_background"
        android:textColor="@color/white"
        android:padding="4dp"
        android:text="0"
        android:visibility="gone"
        android:layout_gravity="end"
        android:textSize="12sp"/>
</LinearLayout>